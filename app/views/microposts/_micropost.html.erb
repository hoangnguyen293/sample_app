<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar_size_of_post),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
    <%= t "users.show.posted" %> <%= time_ago_in_words(micropost.created_at) %>
    <%= t "users.show.ago" %>.
    <% if current_user?(micropost.user) %>
      <%= link_to t("users.show.delete"), micropost, method: :delete,
                                       data: { confirm: t("users.show.you_sure") } %>
    <% end %>
  </span>
</li>
